/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/bitbybit-dev",
        "baseUrl": "./",
        "sourceMap": false,
        "declaration": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "target": "es2015",
        "module": "es2020",
        "strict": false,
        "allowJs": true,
        "emitDeclarationOnly": false,
        "paths": {
            "@bitbybit-dev/base": [
                "../base/dist"
            ],
            "@bitbybit-dev/base/*": [
                "../base/dist/*"
            ],
            "@bitbybit-dev/core": [
                "../core/dist"
            ],
            "@bitbybit-dev/core/*": [
                "../core/dist/*"
            ],
            "@bitbybit-dev/jscad": [
                "../manifold/dist"
            ],
            "@bitbybit-dev/jscad/*": [
                "../jscad/dist/*"
            ],
            "@bitbybit-dev/jscad-worker": [
                "../jscad-worker/dist"
            ],
            "@bitbybit-dev/jscad-worker/*": [
                "../jscad-worker/dist/*"
            ],
            "@bitbybit-dev/manifold": [
                "../manifold/dist"
            ],
            "@bitbybit-dev/manifold/*": [
                "../manifold/dist/*"
            ],
            "@bitbybit-dev/manifold-worker": [
                "../manifold-worker/dist"
            ],
            "@bitbybit-dev/manifold-worker/*": [
                "../manifold-worker/dist/*"
            ],
            "@bitbybit-dev/occt": [
                "../../../../bitbybit-occt/dist"
            ],
            "@bitbybit-dev/occt/*": [
                "../../../../bitbybit-occt/dist/*"
            ],
            "@bitbybit-dev/occt-worker/*": [
                "../../../../bitbybit-occt-worker/dist/*"
            ],
            "@bitbybit-dev/occt-worker": [
                "../../../../bitbybit-occt-worker/dist"
            ]
        },
        "lib": [
            "es2020",
            "dom"
        ],
    }
}